{
  "manifest_version": 3,
  "name": "Upwork Match Intelligence",
  "version": "1.0.0",
  "description": "AI-powered job matching for Upwork. Highlight best matches and track jobs.",
  "permissions": ["storage", "notifications", "tabs"],
  "host_permissions": ["https://www.upwork.com/*"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.upwork.com/*"],
      "js": ["content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["https://www.upwork.com/*"]
    }
  ]
}
